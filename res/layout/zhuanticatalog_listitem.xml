<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="15dip"
    android:paddingBottom="15dip">
    
    <ImageView
        android:id="@+id/catalogzhuanti_listitem_img"
        style="@style/huati_image"/>
    
    <LinearLayout
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:layout_marginLeft="6dip"> 

	    <TextView android:id="@+id/catalogzhuanti_listitem_name" 
	        android:layout_width="fill_parent" 
	     	android:layout_height="wrap_content"
	     	android:textSize="@dimen/text_size_15"
	     	android:textColor="@color/listitem_black"
	     	android:textStyle="bold"
	     	android:singleLine="true"/> 	
	     	
	    <TextView android:id="@+id/catalogzhuanti_listitem_description" 
	        android:layout_width="fill_parent" 
	     	android:layout_height="wrap_content"
	     	android:layout_marginTop="8dip"
	     	android:textSize="@dimen/text_size_12"
	     	android:textColor="@color/listitem_gray"
	     	android:singleLine="true"/>
	     
    </LinearLayout>
    
</LinearLayout>