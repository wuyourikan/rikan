<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="10dip"
    android:paddingBottom="9dip">   

    <ImageView 
    	android:id="@+id/special_listitem_img"
      	style="@style/special_image"/>

	<LinearLayout
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:layout_marginLeft="6dip"> 

	    <TextView android:id="@+id/special_listitem_title" 
	        android:layout_width="fill_parent" 
	     	android:layout_height="wrap_content"
	     	android:includeFontPadding="false"
     		android:textStyle="bold"
     		android:textSize="@dimen/text_size_15"
	     	android:textColor="@color/listitem_black"
	     	android:maxLines="2"
	    	android:ellipsize="end"/> 	
	
	    <LinearLayout 
	    	android:orientation="horizontal" 
	        android:layout_width="fill_parent"  
	        android:layout_height="fill_parent"
	        android:layout_marginTop="2dip">   
	       	<TextView
			    android:id="@+id/special_listitem_intro"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:ellipsize="end"
			    android:includeFontPadding="false"
			    android:maxLines="5"
			    android:textColor="@color/listitem_black"
			    android:textSize="@dimen/text_size_10"
			    android:textStyle="bold" />
	        
	       	<!-- <TextView android:id="@+id/special_listitem_author"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:textSize="@dimen/text_size_10"
	            android:textColor="@color/listitem_gray"/>
	       	
	       	<TextView android:id="@+id/special_listitem_date"  
	    		android:layout_width="wrap_content" 
	           	android:layout_height="wrap_content" 
	           	android:layout_marginLeft="10dip"
	           	android:textSize="@dimen/text_size_10"
	            android:textColor="@color/listitem_gray"/> -->
       	</LinearLayout>
       	
    </LinearLayout>

</LinearLayout> 